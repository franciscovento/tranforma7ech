<style>
  .card {
    perspective: 1000px;
    min-height: 400px;
  }

  .card-front,
  .card-back {
    width: 100%;
    height: 100%;
    position: absolute;
    backface-visibility: hidden;
    transition: transform 0.5s;
    display: flex;
    justify-content: center;
    align-items: center;
    font-size: 24px;
  }

  .card-front {
    border-radius: 10px;
  }

  .card-back {
    transform: rotateY(180deg);
    border-radius: 10px;
  }

  .card:hover .card-front {
    transform: rotateY(180deg);
  }

  .card:hover .card-back {
    transform: rotateY(0);
  }
</style>
