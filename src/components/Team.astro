---
import fran from '../assets/fran.jpg';
import gonza from '../assets/gonza.jpg';
import luis from '../assets/luis.jpg';
import nico from '../assets/nico.jpg';
import yami from '../assets/yami.jpg';
import fran2 from '../assets/fran2.jpeg';
import carla from '../assets/carla.jpeg';

const team = [
  {
    image: fran.src,
    name: 'Francisco Barrionuevo',
    position: 'Teach Lead',
  },
  {
    image: gonza.src,
    name: 'Gonzalo Szame',
    position: 'Product Analyst',
  },
  {
    image: luis.src,
    name: 'Luis González',
    position: 'Product Analyst',
  },
  {
    image: nico.src,
    name: 'Héctor N. Caffarini',
    position: 'SCRUM Master',
  },
  {
    image: yami.src,
    name: 'Yamila Arribas',
    position: 'UI Designer',
  },
  {
    image: fran2.src,
    name: 'Francisco Vento',
    position: 'Product Analyst',
  },
  {
    image: carla.src,
    name: 'Karla Kim',
    position: 'Product Owner',
  },
];
---

<div class="mx-auto max-w-7xl px-6 lg:px-8 pt-12">
  <div class="mx-auto max-w-2xl lg:text-center">
    <p class="text-3xl font-roboto tracking-tight text-gray-900 sm:text-4xl">
      Nuestro equipo
    </p>
    <p class="mt-6 text-lg leading-8 font-nunito text-gray-600">
      Nos esforzamos por superar las expectativas en cada tarea que emprendemos.
    </p>
  </div>
  <div class="flex items-center justify-center gap-8 py-12 flex-wrap">
    {
      team.map((item) => (
        <div class="flex flex-col items-center gap-4">
          <img src={item.image} class="w-32 h-32 rounded-full bg-slate-600" />
          <div class="flex flex-col items-center justify-center">
            {item.name}
            <span class="text-xs text-tt-text">{item.position}</span>
          </div>
        </div>
      ))
    }
  </div>
</div>
