---
import { ViewTransitions } from 'astro:transitions';
import Logo from '../components/atoms/Logo.astro';

interface Props {
  title?: string;
}

const { title = 'transforma7ech' } = Astro.props;
---

<!doctype html>
<html class="h-full bg-gray-50" lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Dashboard template" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" href="favicon.ico" type="image/x-icon" />
    <meta name="generator" content="Dashboard" />
    <title>{title}</title>

    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Nunito:wght@200;400&family=Roboto:wght@100&display=swap"
      rel="stylesheet"
    />
    <ViewTransitions />
  </head>
  <body class="h-full font-nunito">
    <div class="bg-white">
      <!-- Header -->
      <header class="absolute inset-x-0 top-0 z-50">
        <nav
          class="flex items-center justify-between p-6 lg:px-8"
          aria-label="Global"
        >
          <div class="flex lg:flex-1">
            <a href="/" class="-m-1.5 p-1.5">
              <Logo width={220} height={90} />
            </a>
          </div>
          <div id="openNavBar" class="flex lg:hidden">
            <button
              type="button"
              class="-m-2.5 inline-flex items-center justify-center rounded-md p-2.5 text-gray-700"
            >
              <span class="sr-only">Open main menu</span>
              <svg
                class="h-6 w-6"
                fill="none"
                viewBox="0 0 24 24"
                stroke-width="1.5"
                stroke="currentColor"
                aria-hidden="true"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  d="M3.75 6.75h16.5M3.75 12h16.5m-16.5 5.25h16.5"></path>
              </svg>
            </button>
          </div>
          <div class="hidden lg:flex lg:gap-x-12">
            <a
              href="/#mision"
              class="text-sm font-semibold leading-6 text-gray-900">Misión</a
            >
            <a
              href="/#values"
              class="text-sm font-semibold leading-6 text-gray-900">Valores</a
            >
            <a
              href="/#team"
              class="text-sm font-semibold leading-6 text-gray-900">Equipo</a
            >
          </div>
          <div class="hidden lg:flex lg:flex-1 lg:justify-end">
            <a
              href="/caso-de-estudio/maysix-sochic"
              class="text-sm font-semibold leading-6 text-gray-900"
              >Caso de estudio <span aria-hidden="true">&rarr;</span></a
            >
          </div>
        </nav>
        <!-- Mobile menu, show/hide based on menu open state. -->
        <div
          id="navBar"
          class="hidden lg:hidden"
          role="dialog"
          aria-modal="true"
        >
          <!-- Background backdrop, show/hide based on slide-over state. -->
          <div class="fixed inset-0 z-50"></div>
          <div
            class="fixed inset-y-0 right-0 z-50 w-full overflow-y-auto bg-white px-6 py-6 sm:max-w-sm sm:ring-1 sm:ring-gray-900/10"
          >
            <div class="flex items-center justify-between">
              <a href="/" class="-m-1.5 p-1.5">
                <span class="sr-only">Your Company</span>
                <img class="h-8 w-auto" src="/logo-black.png" alt="" />
              </a>
              <button
                id="closeNavBar"
                type="button"
                class="-m-2.5 rounded-md p-2.5 text-gray-700"
              >
                <span class="sr-only">Close menu</span>
                <svg
                  class="h-6 w-6"
                  fill="none"
                  viewBox="0 0 24 24"
                  stroke-width="1.5"
                  stroke="currentColor"
                  aria-hidden="true"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    d="M6 18L18 6M6 6l12 12"></path>
                </svg>
              </button>
            </div>
            <div class="mt-6 flow-root">
              <div class="-my-6 divide-y divide-gray-500/10">
                <div class="space-y-2 py-6">
                  <a
                    href="/#mision"
                    class="-mx-3 block rounded-lg px-3 py-2 text-base font-semibold leading-7 text-gray-900 hover:bg-gray-50"
                    >Misión</a
                  >
                  <a
                    href="/#values"
                    class="-mx-3 block rounded-lg px-3 py-2 text-base font-semibold leading-7 text-gray-900 hover:bg-gray-50"
                    >Valores</a
                  >
                  <a
                    href="/caso-de-estudio/maysix-sochic"
                    class="-mx-3 block rounded-lg px-3 py-2 text-base font-semibold leading-7 text-gray-900 hover:bg-gray-50"
                    >Caso de estudio</a
                  >
                  <a
                    href="/#team"
                    class="-mx-3 block rounded-lg px-3 py-2 text-base font-semibold leading-7 text-gray-900 hover:bg-gray-50"
                    >Equipo</a
                  >
                </div>
              </div>
            </div>
          </div>
        </div>
      </header>
      <main class="isolate">
        <slot />
      </main>
    </div>
    <script>
      const navBar: HTMLElement = document.getElementById('navBar');
      const closeNavBar = document.getElementById('closeNavBar');
      const openNavBar = document.getElementById('openNavBar');

      closeNavBar.addEventListener('click', toggleMenu);
      openNavBar.addEventListener('click', toggleMenu);

      function toggleMenu() {
        navBar.classList.toggle('hidden');
      }
    </script>
    <style is:global>
      html,
      body {
        scroll-behavior: smooth;
      }
    </style>
  </body>
</html>
